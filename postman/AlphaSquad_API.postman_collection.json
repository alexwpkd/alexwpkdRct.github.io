{
  "info": {
    "name": "AlphaSquad API - Quick Test",
    "_postman_id": "alphasquad-quick-test",
    "description": "Colecci√≥n para probar los endpoints principales: auth, productos y carrito.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"correo\": \"cliente@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["auth","login"]
        }
      }
    },
    {
      "name": "Auth - Register Cliente",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"correo\": \"cliente@example.com\",\n  \"password\": \"password123\",\n  \"nombre\": \"Cliente Prueba\",\n  \"rut\": \"12345678-9\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/auth/registro/cliente",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["auth","registro","cliente"]
        }
      }
    },
    {
      "name": "Productos - Get All",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/productos",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","productos"]
        }
      }
    },
    {
      "name": "Productos - Get By ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/productos/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","productos",":id"]
        }
      }
    },
    {
      "name": "Carrito - Get By Cliente",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/carritos/cliente/:idCliente",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","carritos","cliente",":idCliente"]
        }
      }
    },
    {
      "name": "Carrito - Agregar Producto",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/carritos/:idCliente/agregar?productoId={{productoId}}&cantidad=1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","carritos",":idCliente","agregar"],
          "query": [
            { "key": "productoId", "value": "{{productoId}}" },
            { "key": "cantidad", "value": "1" }
          ]
        }
      }
    },
    {
      "name": "Carrito - Actualizar Cantidad",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/carritos/:idCliente/actualizar/:idDetalle?cantidad=2",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","carritos",":idCliente","actualizar",":idDetalle"],
          "query": [
            { "key": "cantidad", "value": "2" }
          ]
        }
      }
    },
    {
      "name": "Carrito - Eliminar Item",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/carritos/:idCliente/eliminar-item/:idDetalle",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","carritos",":idCliente","eliminar-item",":idDetalle"]
        }
      }
    },
    {
      "name": "Carrito - Vaciar",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/carritos/:idCliente/vaciar",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","carritos",":idCliente","vaciar"]
        }
      }
    },
    {
      "name": "Carrito - Checkout",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:8080/api/carritos/:idCliente/checkout",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","carritos",":idCliente","checkout"]
        }
      }
    }
  ]
}
